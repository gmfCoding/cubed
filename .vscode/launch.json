{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Python Debugger: Current File with Arguments",
			"type": "debugpy",
			"request": "launch",
			"program": "${file}",
			"console": "integratedTerminal",
			"args": "assets/source/orbit/orbit_inst.sep"
		},
		{
			"type": "lldb",
			"request": "attach",
			"name": "LLDB Attach",
			"program": "${workspaceFolder}/cubed"
		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "LLDB Launch",
			"program": "${workspaceFolder}/cubed",
			"args": [],
			"cwd": "${workspaceFolder}"
		},
		{
			"name": "(gdb) Launch",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/cubed",
			"args": [],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				}
			]
		}
	]
}